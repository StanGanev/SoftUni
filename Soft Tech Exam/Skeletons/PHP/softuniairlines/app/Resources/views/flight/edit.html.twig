{% extends "base.html.twig" %}

{% block main %}
    <div class="wrapper">
        <form class="flight-create" method="post">
            <div class="create-header">
                Edit Flight
            </div>
            <div class="create-name">
                <div class="create-label">Departure</div>
                <input class="create-content" name="flight[departure]" value="{{ flight.departure}}"/>
            </div>
            <div class="create-name">
                <div class="create-label">Destination</div>
                <input class="create-content" name="flight[destination]" value="{{ flight.destination}}"/>
            </div>
            <div class="create-name">
                <div class="create-label">Status</div>
                <select class="create-submit" name="flight[status]">
                    <option value="Delayed" {{ flight is defined and flight.status == 'Delayed' ? 'selected' : '' }}>Delayed</option>
                    <option value="Landed" {{ flight is defined and flight.status == 'Landed' ? 'selected' : '' }}>Landed</option>
                    <option value="Expected" {{ flight is defined and flight.status == 'Expected' ? 'selected' : '' }}>Expected</option>
                </select>
            </div>
            <div class="create-button-holder">
                <button type="submit" class="submit-button">Edit</button>
                <a type="button" href="/" class="back-button">Back</a>
            </div>
            {{ form_row(form._token) }}
        </form>
    </div>
{% endblock %}